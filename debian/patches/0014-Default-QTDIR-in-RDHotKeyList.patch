Subject: Default QTDIR in RDHotKeyList

---
 lib/Makefile.am      |    2 +-
 lib/rdhotkeylist.cpp |    5 +++--
 2 files changed, 4 insertions(+), 3 deletions(-)

diff --git a/lib/Makefile.am b/lib/Makefile.am
index 4534b8c..63b3ca1 100644
--- a/lib/Makefile.am
+++ b/lib/Makefile.am
@@ -22,7 +22,7 @@
 ##
 ## Use automake to process this into a Makefile.in
 
-AM_CPPFLAGS = -Wall -DPREFIX=\"$(prefix)\" @QT_CXXFLAGS@
+AM_CPPFLAGS = -Wall -DPREFIX=\"$(prefix)\" -DQTDIR=\"@QT_DIR@\" @QT_CXXFLAGS@
 MOC = @QT_MOC@
 CWRAP = ../helpers/cwrap
 
diff --git a/lib/rdhotkeylist.cpp b/lib/rdhotkeylist.cpp
index e02fc87..bcec4b1 100644
--- a/lib/rdhotkeylist.cpp
+++ b/lib/rdhotkeylist.cpp
@@ -54,9 +54,10 @@ void RDHotKeyList::BuildKeyList( )
     char *p = {0};
 
     if(getenv("QTDIR")==NULL) {
-        return;
+      strcpy(qtpath, QTDIR);
+    } else {
+      strcpy(qtpath, (const char *) getenv("QTDIR"));
     }
-    strcpy(qtpath, (const char *) getenv("QTDIR"));
     strcpy(keyfile,qtpath);
     strcat(keyfile,"/include/qnamespace.h");
     hkeyfile = fopen(keyfile,"r");
